library IEEE;
use IEEE.STD_LOGIC_1164.ALL;
use IEEE.NUMERIC_STD.ALL;

entity contador is
Port(
    cent10: in std_logic;
    cent20: in std_logic;
    cent50: in std_logic;
    cent100: in std_logic;
    reset: in std_logic;
    clk: in std_logic;
    dinero: out integer); 
end contador;

architecture Behavioral of contador is
signal entradas: std_logic_vector(3 downto 0);
signal cuenta: integer:=0;
begin
entradas<=(cent100,cent50,cent20,cent10);
    process(clk,reset)
    begin
        if reset ='1' then
            cuenta <= 0;
        elsif rising_edge(clk) then
            case entradas is
                when "0001" => cuenta <= cuenta+10;
                when "0010" => cuenta <= cuenta+20;
                when "0100" => cuenta <= cuenta+50;
                when "1000" => cuenta <= cuenta+100;
                when OTHERS => cuenta <= cuenta;
            end case;
        end if;
     end process;
     dinero <= cuenta;  
end Behavioral;
